<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Snipster</title>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <header>
      <h2>Welcome, {{user.name}}</h2>
      <a href="/edit?id={{user._id}}">Edit Account</a>
      <a href="/logout">Log out</a>
      <div class="header">

        <form action="/search" method="post">
          <input type="text" name="search" value="" placeholder="Search database">
          <button class="dataButton">Search</button>
        </form>
      </div>
    </header>
    <nav>
        <a class="button" href="/newSnippet">New Snippet</a>
    </nav>

    <table border="1">
      <tr>
        <th>
          Type
        </th>
        <th>
          Body
        </th>
        <th>
          Notes
        </th>
        <th>
          Language
        </th>
        <th>
          tags
        </th>
      </tr>
      {{#snippets}}
      <tr>
        <td>
          <a href="/newSnippet?id={{_id}}">{{type}}</a>
        </td>
        <td>
          {{body}}
        </td>
        <td>
          {{notes}}
        </td>
        <td>
          {{language}}
        </td>
        <td>
          {{tags}}
        </td>
        <td>
          <a href="/deleteSnippet/?id={{_id}}">Delete</a>
        </td>
      </tr>
      {{/snippets}}

    </table>

  </body>
</html>
